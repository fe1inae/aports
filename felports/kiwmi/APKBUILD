# Maintainer: Elaina Thompson <felinae@ulthar.cat>
pkgname=kiwmi
pkgver=0_git20211018
pkgrel=0
_commit=68085d94e31150143dd78e94335cafbac799794b
pkgdesc="A fully programmable Wayland Compositor"
url="https://github.com/buffet/kiwmi"
arch="all"
license="MPL-2.0"
makedepends="meson ninja git cmake wlroots-dev pixman-dev wayland-dev wayland-protocols"
source="$pkgname-$pkgver.tar.gz::https://github.com/buffet/kiwmi/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="!check"

build() {
	meson --prefix="$pkgdir/" build
	ninja -C build
}

package() {
	ninja -C build install
}

