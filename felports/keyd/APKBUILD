# Maintainer: Elaina Thompson <felinae@ulthar.cat>
pkgname=keyd
pkgver=1.1.2
pkgrel=0
_commit=84c09bbc0189ad3aed6570716eb3c4870f5d15a6
pkgdesc="A key remapping daemon for linux."
url="https://github.com/rvaiya/keyd"
arch="all"
license="MIT"
makedepends=""
source="$pkgname-$pkgver.tar.gz::https://github.com/rvaiya/keyd/archive/refs/tags/v$pkgver.tar.gz
	$pkgname.initd"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"

build() {
	make
}

package() {
	mkdir -p "$pkgdir/usr/bin"
	mkdir -p "$pkgdir/usr/share/man/man1"

	install -Dm755 bin/keyd "$pkgdir/usr/bin"
	install -Dm644 keyd.1.gz "$pkgdir/usr/share/man/man1"
	install -Dm755 "$srcdir/keyd.initd" "$pkgdir/etc/init.d/keyd"
}

sha512sums="
c8a3287e6f6b3b778b8db63fd1c0005ed2e93706f659c8e9c5029791e1b226eea9e73e72602607a21a5121b74776f7dc941327ea00d6f38e7201349c8221052c  keyd-1.1.2.tar.gz
4460352705db89651ed2d0e49114d17475b4c760824439c6bec63a2d3b4bf0ef0e0acb36221b966438f4e578ea67f42c7d6e789a157d43a918ffa02ba0d30aaf  keyd.initd
"
