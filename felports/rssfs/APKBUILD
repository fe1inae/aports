pkgname=rssfs
pkgver=0_git20210526
pkgrel=0
_commit=6252ace37de8b85efa6c9ac7d4b91a9568d5bc28
pkgdesc="The RSS file system"
url="https://github.com/dertuxmalwieder/rssfs"
arch="all"
license="MIT-0"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/dertuxmalwieder/rssfs/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="!check"

build() {
    go build
}

package() {
    mkdir -p "$pkgdir/usr/bin"
    install -Dm755 rssfs "$pkgdir/usr/bin"
}

