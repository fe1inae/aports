# Maintainer: Elaina Thompson <felinae@ulthar.cat>
pkgname=nq-doc
pkgver=0.4
pkgrel=0
pkgdesc="Unix command line queue utility"
url="https://github.com/leahneukirchen/nq"
arch="all"
license="CC0"
source="$pkgname-v$pkgver.tar.gz::https://github.com/leahneukirchen/nq/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/${pkgname%%-doc}-$pkgver"
options="!check"

build() {
    gzip nq.1
    gzip fq.1
    gzip tq.1
}

package() {
    mkdir -p "$pkgdir/usr/share/man/man1"
	install -Dm644 nq.1.gz "$pkgdir/usr/share/man/man1"
	install -Dm644 fq.1.gz "$pkgdir/usr/share/man/man1"
	install -Dm644 tq.1.gz "$pkgdir/usr/share/man/man1"
}
sha512sums="
c4587c2074dd6e3d18d56a273b943b2594f6ea73912d774120706dbcb6a64e0b7a99c4da7283cbe0d3d47eb24fa246625e9180a88ee2e0cacc647de8c8606c38  nq-doc-v0.4.tar.gz
"
