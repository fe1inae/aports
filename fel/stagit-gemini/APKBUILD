pkgname=stagit-gemini
pkgver=0_git20211231
pkgrel=0
_commit="master"
pkgdesc="static git page generator"
url="https://ulthar.cat/git/stagit-gemini"
arch="all"
license="MIT"
makedepends="libgit2-dev"
subpackages="$pkgname-doc"
source="https://ulthar.cat/git/$pkgname/refs/$pkgname-$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="!check"

build() {
	make
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" MANPREFIX=/usr/share/man install
}
