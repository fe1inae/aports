# Maintainer: Elaina Thompson <felinae@ulthar.cat>
pkgname=telescope
pkgver=0.6.1
pkgrel=0
pkgdesc="telescope gemini browser"
url="https://git.omarpolo.com/telescope/"
arch="all"
license="ISC"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/omar-polo/telescope/releases/download/0.6.1/telescope-${pkgver}.tar.gz"
makedepends="ncurses-dev libretls-dev libevent-dev"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"

build() {
    ./configure
    make
    gzip telescope.1
}

package() {
    mkdir -p "$pkgdir/usr/bin"
    mkdir -p "$pkgdir/usr/share/man/man1"
	install -Dm755 telescope "$pkgdir/usr/bin"
	install -Dm644 telescope.1.gz "$pkgdir/usr/share/man/man1"
}
sha512sums="
aff74406c87ed59a3adec7e5d43ac99f4e8d18e761d7590197ab86b4b8fd50882bcc783f47e1da8eab2a0a632a8b78212b45b1ab314527fc7b96fb2cb16d78f0  telescope-0.6.1.tar.gz
"
